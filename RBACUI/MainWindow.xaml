<Window x:Class="RBACUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RBACUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="20,14,700,378" >Role Name</TextBlock>
        <TextBlock Margin="152,14,476,378" >Is Role Senior Management?</TextBlock>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,51,0,0" Name="roleNameBox" VerticalAlignment="Top" Width="127" />
